{
  "extends": "@nerve/tsconfig/next.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "$core": ["./src/core/*"],
      "$features/*": ["./src/features/*"],
      "$sanity": ["./src/core/integrations/sanity"],
      "$shared": ["./src/shared/*"]
    },
    "plugins": [{ "name": "next" }]
  },
  "include": ["next-env.d.ts", "ambient/*.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
